#:kivy 2.1.0

<Cadastro>:
    name: 'cadastro'
    BoxLayout:
        orientation: 'vertical'
        padding: 15
        spacing: 15
        BoxLayout:
            orientation: 'vertical'
            spacing: 15
            Label:
                text_size: self.size
                halign: 'left'
                text: 'Insira um nome para cadastro'
                color: 0, 0, 0, 1
                
            TextInput:
                size_hint_y: None
                height: 50
            Label:
                text_size: self.size
                halign: 'left'
                text: 'Insira o Saldo da carteira:'
                color: 0, 0, 0, 1
            TextInput:
                size_hint_y: None
                height: 50
            Button:
                text: 'Cadastrar'
                font_size: 20
                on_press: root.cadastrar()
        Label:
            text: ''
            color: 0, 0, 0, 1
            text_size: self.size
            halign: 'left'
            size_hint_y: 1.3

    
    